{% extends 'base.html.twig' %}

{% block title %}Personnages
{% endblock %}

{% block monTitle %}
	Personnage
	{{perso.nom}}
{% endblock %}

{% block body %}
	<div class="row">
		<div class "col-2">
			<img src="{{asset('images/personnages/' ~ perso.nom ~ '.png')}}">
		</div>

		<div class="col">
			<h2>
				{{ perso.nom }}
			</h2>
			<div>
				{% if perso.sexe %}
					Homme

				{% else %}
					Femme
				{% endif %}
			</div>
			<h3>
				Les caracteristiques
			</h3>
			<ul>
				<li>
					Force:
					{{perso.carac.force}}
				</li>
				<li>
					Force:
					{{perso.carac.agi}}
				</li>
				<li>
					Force:
					{{perso.carac.intel}}
				</li>
			</ul>
		</div>

	</div>

{% endblock %}
